{
  "name": "@repulsetech/nestjs-firebase-admin",
  "version": "10.0.0",
  "description": "Firebase Admin v10 module for Nest framework",
  "authors": [
    {
      "name": "Repulse Technologies",
      "email": "contact@repulse.tech"
    },
    {
      "name": "Raj Kishore",
      "email": "raj@repulse.tech"
    }
  ],
  "main": "./dist/index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/RepulseTech/nestjs-firebase-admin.git"
  },
  "scripts": {
    "precommit": "lint-staged",
    "prettier": "prettier src/**/*.ts --write && git status",
    "build": "rimraf dist && npm run build:lib",
    "build:lib": "tsc -p tsconfig.json",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "prepublish:next": "npm run build",
    "publish:next": "npm publish --access public --tag next",
    "prepare": "npm run build"
  },
  "peerDependencies": {
    "@nestjs/common": "^8.4.0",
    "@nestjs/core": "^8.4.0"
  },
  "dependencies": {
    "firebase-admin": "^10.0.2"
  },
  "devDependencies": {
    "@nestjs/common": "^8.4.0",
    "@nestjs/core": "^8.4.0",
    "@types/jest": "^27.4.1",
    "@types/node": "17.0.21",
    "dotenv": "^16.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "12.3.5",
    "prettier": "2.5.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "typescript": "^4.6.2"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}